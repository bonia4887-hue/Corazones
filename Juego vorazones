<script>
let screens = document.querySelectorAll(".screen");
let score = 0;
let gameInterval;

function nextScreen(n) {
    screens.forEach(s => s.classList.remove("active"));
    screens[n - 1].classList.add("active");
}

function checkAnswer() {
    if (document.getElementById("answer").value.trim() === "1") {
        nextScreen(3);
    } else alert("Intenta otra vez ðŸ’•");
}

function startGame() {
    nextScreen(4);
    score = 0;
    document.getElementById("score").innerText = "Amor: 0";
    gameInterval = setInterval(spawnHeart, 700);
    setTimeout(endGame, 300000); // 5 minutos
}

function spawnHeart() {
    let h = document.createElement("div");
    h.className = "corazon";
    h.innerText = "ðŸ’–";
    h.style.left = Math.random() * (innerWidth - 50) + "px";
    h.style.top = Math.random() * (innerHeight - 50) + "px";

    h.addEventListener("touchstart", explotar);
    h.addEventListener("click", explotar);

    function explotar(e) {
        e.preventDefault();
        score++;
        document.getElementById("score").innerText = "Amor: " + score;
        h.remove();
    }

    document.getElementById("gameScreen").appendChild(h);
    setTimeout(() => h.remove(), 2000);
}

function endGame() {
    clearInterval(gameInterval);
    nextScreen(5);
    document.getElementById("finalScore").innerHTML = `
    <div style="padding:20px;font-size:18px;animation:aparecer 1.5s">
    mi amor la amo mas de lo que mis palabras pueden desir usted es mi vida
    es mitodo y mi razon de sonreir estoy tan orgullosa de usted miamor
    aiempre sere suyo mi vida este cada vivo agradecido con dios por la gran
    novia que me a dado este este desde que estoy junto a usted miamor
    e sido muy feliz este muchas grasias por ser la mejor miamor
    la amo mi negra ðŸ’–
    </div>`;
}
</script>

